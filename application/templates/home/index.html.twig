{% extends 'base.html.twig' %}

{% block body %}
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container"></div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-8">
                    <!-- row -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="section-title">
                                <h2 class="title">Recent posts</h2>
                            </div>
                        </div>
                        {% for article in articles %}
                            <!-- post -->
                            {{ include('article/preview.article.html.twig', {'article': article}) }}
                            <!-- /post -->

                            {% if loop.index > 1 and (loop.index % 2) is same as(0) %}
                                <div class="clearfix visible-md visible-lg"></div>
                            {% endif %}
                        {% endfor %}
                        <div class="clearfix visible-md visible-lg"></div>
                        <div class="section-row loadmore text-center">
                            <a href="{{ url('article_list') }}" class="primary-button">See all articles</a>
                        </div>
                    </div>
                    <!-- /row -->
                </div>
                <div class="col-md-4">
                    <!-- category widget -->
                    <div class="aside-widget">
                        <div class="section-title">
                            <h2 class="title">Categories</h2>
                        </div>
                        <div class="category-widget">
                            <ul>
                                {% for category in categories %}
                                    <li>{{ include('category/category.html.twig', {'category': category}) }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="clearfix visible-md visible-lg"></div>
                        <div class="section-row loadmore text-center">
                            <a href="{{ url('category_list') }}" class="primary-button">See all categories</a>
                        </div>
                    </div>
                    <!-- /category widget -->
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
{% endblock %}